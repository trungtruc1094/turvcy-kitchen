<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">

        <shape>
            <gradient
                android:angle="45"
                android:endColor="#E82435"
                android:startColor="#b35e65"
                android:type="linear" />
            <stroke
                android:width="2dp"
                android:color="#ffffff"
                android:dashGap="2dp"
                android:dashWidth="4dp" />
        </shape>

    </item>


</layer-list>